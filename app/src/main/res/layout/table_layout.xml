<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="120dp"
    android:layout_marginStart="85dp">

    <TableRow android:id="@+id/first_row_header">

        <TextView
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:text="@string/a"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:text="@string/b"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="99dp"
            android:layout_height="match_parent"
            android:text="@string/a_b"
            android:textSize="35sp"
            android:textStyle="bold" />
    </TableRow>


    <TableRow android:id="@+id/second_row"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="89dp"
            android:layout_height="match_parent"
            android:text="@string/t"
            android:textSize="35sp" />

        <TextView
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:text="@string/t"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/first_input"
            android:inputType="textCapCharacters"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="25sp"
            android:autofillHints="" />

    </TableRow>

    <TableRow android:id="@+id/third_row">

        <TextView
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:text="@string/t"
            android:textSize="35sp" />

        <TextView
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:text="@string/f"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/second_input"
            android:inputType="textCapCharacters"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="25sp"
            android:autofillHints="" />

    </TableRow>

    <TableRow android:id="@+id/fourth_row">

        <TextView
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:text="@string/f"
            android:textSize="35sp" />

        <TextView
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:text="@string/t"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/third_input"
            android:inputType="textCapCharacters"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="25sp"
            android:autofillHints="" />

    </TableRow>

    <TableRow android:id="@+id/fifth_row">

        <TextView
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:text="@string/f"
            android:textSize="35sp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="@string/f"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/fourth_input"
            android:inputType="textCapCharacters"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="25sp"
            android:autofillHints="" />
    </TableRow>


</TableLayout>